@model DataTransferObjects.ViewModels.ProjectDetailsViewModel
@{
    ViewData["Title"] = "Project Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



@{ int counter = 0;}
@{ var gallery = Model.Images.ToList();}
<div class="header agileits w3layouts header-head" id="home">
    <div class="container">
        <div class="head">
            <nav class="navbar agileits w3layouts navbar-default">
                <div class="navbar-header">
                    <button type="button agileits w3layouts" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar agileits w3layouts"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar agileits w3layouts"></span>
                    </button>
                    <div class="navbar-brand agileits w3layouts logo wow fadeInLeft animated" data-wow-delay=".5s">
                        <h1><a asp-area="" asp-controller="Home" asp-action="Index"><span>M<br>I<br>R<br>A<br></span>D<br>E<br>S<br>I<br>G<br>N<br></a></h1>
                    </div>
                </div>
                <div class="collapse navbar-collapse nav-wil agileits w3layouts" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav wow fadeInDown agileits w3layouts animated" data-wow-delay=".5s">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index"><span data-hover="Home">Начало</span></a> </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</div>
<div class="single agileits w3layouts">
    <div class="container">
        <div class="single-top">
            <img class="img-responsive wow fadeInUp agileits w3layouts animated" src="@Model.Image1280X478" alt="Image" />
            <div class="lone-line">
                <h4>@Model.Subname</h4>
                <ul class="grid-blog agileits w3layouts">
                    <li><span><i class="glyphicon agileits w3layouts glyphicon-time"> </i>08.09.2014</span></li>
                    <li><a href="#"><i class="glyphicon agileits w3layouts glyphicon-comment"> </i>5 Comment</a></li>
                    <li><a href="#"><i class="glyphicon glyphicon-share"> </i>Share</a></li>
                </ul>
                <p class="wow fadeInLeft agileits w3layouts animated" data-wow-delay=".5s">
                    @Model.About
                </p>
            </div>
        </div>
    </div>
</div>
<div class="portfolio" id="gallery">

    <div class="portfolio-top wow fadeInDown animated" data-wow-delay=".5s">
        @foreach(var picture in gallery.Take(3))
        {
            <div class="col-md-4 grid slideanim">
                <figure class="effect-jazz">
                    <a href="#portfolioModal@(picture.Id)" data-toggle="modal">

                        <img src="@picture.Link" alt="img25" class="img-responsive" />
                        <figcaption>
                            <h4>Mira Design</h4>
                        </figcaption>
                    </a>
                </figure>
            </div>
            counter++;
        }
        <div class="clearfix"></div>
    </div>
    <div class="portfolio-top wow fadeInUp animated" data-wow-delay=".5s">
        @foreach (var image in gallery.Take(4))
        {
            <div class="col-md-3 grid grid-wi slideanim">
                <figure class="effect-jazz">
                    <a href="#portfolioModal1" data-toggle="modal">
                        <img src="@image.Link" alt="img25" class="img-responsive" />
                        <figcaption>
                            <h4>Mira Design</h4>
                        </figcaption>
                    </a>
                </figure>
            </div>
        }
        <div class="clearfix"></div>
    </div>
</div>
@foreach (var modal in gallery)
{
    <div class="portfolio-modal modal fade slideanim" id="portfolioModal1" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <div class="lr">
                    <div class="rl"></div>
                </div>
            </div>
            <div class="container">
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="modal-body">
                        <h3>@modal.Project.Name</h3>
                        <img src="@modal.Link" class="img-responsive" alt="">
                        <p>
                            Mira Design
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
